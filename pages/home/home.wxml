<!--home.wxml-->
<view>
  <view class="cu-bar search bg-white solid-bottom">
    <view class="search-form round">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="请输入" disabled bindtap="toCustomer" confirm-type="search"></input>
    </view>
  </view>
  <!-- 分类 -->
    <!-- <view>我的待办</view> -->
   <view class="cu-list grid col-3 no-border solids-bottom">
    <view class="cu-item" wx:for="{{iconList}}" wx:key>
      <view class="cuIcon-{{item.icon}} text-{{item.color}}">
        <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
          <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
        </view>
      </view>
      <text>{{item.name}}</text>
    </view>
  </view>
</view>